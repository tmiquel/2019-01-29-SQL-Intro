CREATE TABLE `User` (`id` INTEGER PRIMARY KEY AUTOINCREMENT,`name` TEXT);

CREATE TABLE `Article` (`id` INTEGER PRIMARY KEY AUTOINCREMENT,`author_id` INTEGER, `author_name` TEXT,`article_title` TEXT, `article_content` TEXT );

CREATE TABLE `Category` (`id` INTEGER PRIMARY KEY AUTOINCREMENT,`name` TEXT);

CREATE TABLE `Tag` ( `id` INTEGER PRIMARY KEY AUTOINCREMENT, `title` TEXT,`color` TEXT);

CREATE TABLE `Category_per_Article` (`id` INTEGER PRIMARY KEY AUTOINCREMENT,`article_id` INTEGER,`category_id` INTEGER);

CREATE TABLE `Tags_per_Category` (`id` INTEGER PRIMARY KEY AUTOINCREMENT,`category_id` INTEGER,`tag_id` INTEGER);

